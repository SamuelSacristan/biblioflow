# Configuration Base de donn√©es PostgreSQL
POSTGRES_DB=biblioflow
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123
POSTGRES_APP_USER=app_user
POSTGRES_APP_PASSWORD=app_password_123

# Configuration MongoDB
MONGO_INITDB_ROOT_USERNAME=root
MONGO_INITDB_ROOT_PASSWORD=rootpassword123
MONGO_APP_USER=app_logger
MONGO_APP_PASSWORD=logger_password_123

# Configuration Application
JWT_SECRET=your-super-secret-jwt-key-change-in-production
DATABASE_URL=postgresql://app_user:app_password_123@postgres:5432/biblioflow
MONGO_URL=mongodb://app_logger:logger_password_123@mongo:27017/biblioflow_logs

# Configuration Environnement
NODE_ENV=development
PORT=3000
LOG_LEVEL=debug

# Configuration Hot-reload (Docker)
CHOKIDAR_USEPOLLING=true
CHOKIDAR_INTERVAL=300
WATCHPACK_POLLING=true

# Configuration Debug
DEBUG=*
NODE_OPTIONS=--max_old_space_size=4096